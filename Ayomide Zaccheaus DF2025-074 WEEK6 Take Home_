 (%):\\n\", humid)\n","\n","#Temperature Range per City\n","\n","city_summary[\"Temp Range (C)\"] = city_summary[\"Max TemperatureC\"] - city_summary[\"Min TemperatureC\"]\n","print(\"\\n Temperature Range per City (Max - Min C):\\n\", city_summary[\"Temp Range (C)\"])\n","\n","# Correlation Analysis Between Key Factors\n","corr = combined_df[[\"Mean TemperatureC\", \"Mean Humidity\", \"Precipitationmm\",\n","                    \"Mean Wind SpeedKm/h\", \"Mean VisibilityKm\"]].corr()\n","\n","print(\"\\n Correlation Between Weather Variables (All Cities Combined):\\n\", corr)\n","\n","#Identifying Extremes\n","\n","# Hottest and coldest recorded day across all cities\n","hottest_day = combined_df.loc[combined_df[\"Max TemperatureC\"].idxmax(), [\"City\", \"Date\", \"Max TemperatureC\"]]\n","coldest_day = combined_df.loc[combined_df[\"Min TemperatureC\"].idxmin(), [\"City\", \"Date\", \"Min TemperatureC\"]]\n","\n","print(\"\\n Hottest Recorded Day:\\n\", hottest_day)\n","print(\"\\n Coldest Recorded Day:\\n\", coldest_day)\n","\n","# Heaviest rainfall\n","rainiest_day = combined_df.loc[combined_df[\"Precipitationmm\"].idxmax(), [\"City\", \"Date\", \"Precipitationmm\"]]\n","print(\"\\n Day with Heaviest Rainfall:\\n\", rainiest_day)\n","\n","#Event Frequency Comparison\n","event_summary = combined_df.groupby(\"City\")[\"Events\"].value_counts(dropna=False)\n","print(\"\\n Weather Event Frequency by City:\\n\", event_summary)\n","\n","#Exporting Summary Tables\n","city_summary.to_csv(\"City_Weather_Summary.csv\")\n","corr.to_csv(\"Weather_Correlation.csv\")\n","print(\"\\n Summary files 'City_Weather_Summary.csv' and 'Weather_Correlation.csv' saved!\")\n"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"id":"kogxRb67sIJK","executionInfo":{"status":"ok","timestamp":1761502783344,"user_tz":-60,"elapsed":56,"user":{"displayName":"Zaccheaus Ayomide","userId":"01110078707443368918"}},"outputId":"f37bd7b2-c626-4d73-ac29-f967d0e012e6"},"id":"kogxRb67sIJK","execu